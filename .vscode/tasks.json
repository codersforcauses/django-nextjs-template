// .vscode/tasks.json
{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run Backend",
      "type": "shell",
      "command": "cd server && source .env && python manage.py runserver",
      "group": "build",
      "presentation": {
        "group": "buildGroup",
        "reveal": "always",
        "panel": "new",
      }
    },
    {
      "label": "Run Frontend",
      "type": "shell",
      "command": "cd client && source .env && npm run dev",
      "group": "build",
      "presentation": {
        "group": "buildGroup",
        "reveal": "always",
        "panel": "new",
      }
    },
    {
      "label": "Run all",
      "dependsOn": ["Run Backend", "Run Frontend"],
      "group": "build",
      "runOptions": {
        "runOn": "folderOpen" // This starts both tasks when the container is started
      }
    }
  ]
}
